<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] MyTE</title>
    @*Fonte padrão*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    @* ======================= *@
  
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projeto.ASPNET.MVC.CRUD_MyTE.styles.css" asp-append-version="true" />
    @* Links Css Adicionados  *@
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/Form_View_Create.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    @*<link rel="stylesheet" href="~/css/login.css" /> *@
    <link rel="stylesheet" href="~/css/home-func.css" />

    
    @* ======================= *@
</head>
<body>
    <header>
        <div class=" header-user  bg-white border-bottom box-shadow mb-1">
            <div>
                @* Container com o icon Home e Texto *@
                <a class="container-home" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="icon-home" id="home" src="/css/Assets/icon-home.svg" alt="">
                    <button asp-action="Index" type="button" class="btn btn-link"> 
                        Painel Etym 
                    </button>
                </a>
            </div>
           
            <div class="user-user">
                <span class="user-name"> Nome do Funcionário </span>
                    <a class="user-img " asp-area="" 
                                         asp-controller="" 
                                         asp-action="Index">
                        <img id="home" src="~/css/Assets/User-default.svg" 
                                       class="icon-user" 
                                       alt="Imagem User">
                    </a>                 
            </div>
        </div>


        
    </header>
    
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Projeto MyTE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <span> Desenvolvido por: Tarcila, Eva, Julia, Shomara</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
